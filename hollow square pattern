#include <iostream>
int main() {
    int n,i,j;
    std::cout << "Enter the length: ";
    std::cin >>n;
    for (i = 1; i <= n; i++) {
        std::cout << "* ";
    }
    std::cout << std::endl;
    for (i = 2; i < n; i++) {
        std::cout << "* ";
        for (j = 2; j < n; j++) {
            std::cout << "  ";
        }
        std::cout << "*";
        std::cout << std::endl;
    }
    for ( i = 1; i <= n; i++) {
        std::cout << "* ";
    }
    std::cout << std::endl;

    return 0;
}
